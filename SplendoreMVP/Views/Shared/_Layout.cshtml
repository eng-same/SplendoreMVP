<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Splendore Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SplendoreMVP.styles.css" asp-append-version="true" />
    <style>
        /* ===== Warm & Natural Commerce Palette ===== */
        :root {
            --primary-bg: #FDFBF7; /* 60% warm off-white */
            --secondary: #4A4A4A; /* 30% charcoal */
            --accent: #2A7F62; /* 10% emerald green */
        }

        body {
            background-color: var(--primary-bg);
            color: var(--secondary);
            font-family: 'Segoe UI', sans-serif;
        }

        /* Navbar */
        .navbar {
            background-color: var(--secondary);
        }

            .navbar .navbar-brand,
            .navbar .nav-link {
                color: #fff !important;
            }

                .navbar .nav-link:hover {
                    color: var(--accent) !important;
                }

        /* Hero Section */
        .hero {
            background-color: var(--primary-bg);
            text-align: center;
            padding: 4rem 1rem;
        }

            .hero h1 {
                font-size: 2.5rem;
                font-weight: bold;
                color: var(--secondary);
            }

            .hero p {
                font-size: 1.2rem;
                color: #6c757d;
            }

            .hero .btn {
                background-color: var(--accent);
                border: none;
                color: #fff;
                padding: 0.75rem 1.5rem;
                font-size: 1.1rem;
                border-radius: 8px;
                transition: background-color 0.3s;
            }

                .hero .btn:hover {
                    background-color: #246b52;
                }

        /* Footer */
        .footer {
            background-color: var(--secondary);
            color: #fff;
            padding: 1rem 0;
            margin-top: 2rem;
        }

            .footer a {
                color: var(--accent);
                text-decoration: none;
            }
    </style>
</head>
<body>
    <!-- Header / Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="/Home/Index">Splendore Store</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarCustomer" aria-controls="navbarCustomer" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCustomer">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Shop">Shop</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </ul>
                    <partial name="_LoginStatus" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1>Discover Warm & Natural Living</h1>
            <p>Shop apparel, home goods, and artisan crafts that bring comfort and style to your life.</p>
            <a href="/Home/Shop" class="btn mt-3">🛒 Start Shopping</a>
        </div>
    </section>

    <!-- Main Content -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer text-center">
        <div class="container">
            &copy; 2025 - Splendore Store |
            <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
