@{
    ViewData["Title"] = "About Us";
}

<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-lg-6 mb-4">
            <img src="https://placehold.co/1200x800" alt="About Our Store" class="img-fluid rounded-3 shadow-sm" />
        </div>
        <div class="col-lg-6">
            <h2 class="mb-3">Welcome to Splendore Store</h2>
            <p class="text-muted">
                At <strong>Splendore Store</strong>, we believe shopping should be easy, fun, and trustworthy.
                Our mission is to bring you high-quality products at the best prices with reliable customer service.
            </p>
            <p class="text-muted">
                Since our launch, we’ve helped thousands of happy customers find what they love—from the latest
                fashion trends to everyday essentials.
            </p>
            <ul class="list-unstyled">
                <li>✅ Wide range of quality products</li>
