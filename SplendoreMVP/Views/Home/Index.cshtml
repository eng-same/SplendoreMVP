@model ProductsDisplayModel

<div class="container mt-4">
    <h2 class="mb-4">Products</h2>

    <!-- Search and Category Filter -->
    <form method="get" asp-action="Index" class="row g-3 mb-4">
        <div class="col-md-4">
            <input type="text" name="sterm" value="@Model.STerm" class="form-control" placeholder="Search products..." />
        </div>
        <div class="col-md-4">
            <select name="CategoryID" class="form-select">
                <option value="0">All Categories</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id" selected="@(Model.CategoryID == category.Id ? "selected" : null)">
                        @category.Name
                    </option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    <!-- Products Grid -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (Model.Products.Any())
        {
            foreach (var product in Model.Products)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/placeholder.png" : product.ImageUrl)"
                             class="card-img-top" alt="@product.Name" style="height:230px; object-fit:cover;" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted">@product.Description</p>

                            <div class="mt-auto">
                                <p class="fw-bold text-primary mb-3">@product.Price.ToString("C")</p>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="d-flex justify-content-between">
                                        <!-- Add to Cart -->
                                        <a asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id"
                                           class="btn btn-sm btn-success">
                                            🛒 Add to Cart
                                        </a>

                                        <!-- Buy Now -->
                                        <a asp-controller="Cart" asp-action="Buy" asp-route-id="@product.Id"
                                           class="btn btn-sm btn-warning">
                                            💰 Buy Now
                                        </a>

                                        <!-- Add to Favorites -->
                                        <a asp-controller="Favorites" asp-action="Add" asp-route-id="@product.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            ❤️ Favorite
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted">Login to purchase or save favorites.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col">
                <div class="alert alert-info">No products found.</div>
            </div>
        }
    </div>
</div>
