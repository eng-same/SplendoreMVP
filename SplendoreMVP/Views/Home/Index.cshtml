@model ProductsDisplayModel

<div class="container mt-5">
    <!-- Hero Section -->
    <section class="p-5 mb-5 text-center rounded shadow-sm bg-light border">
        <h1 class="display-5 fw-bold text-dark">Discover Our Products</h1>
        <p class="lead text-muted">Curated items designed to bring quality and style into your everyday life.</p>
    </section>

    <!-- Search and Category Filter -->
    <form method="get" asp-action="Index" class="row g-3 mb-5 align-items-end">
        <div class="col-md-4">
            <label class="form-label fw-semibold">Search</label>
            <input type="text" name="sterm" value="@Model.STerm"
                   class="form-control border-0 shadow-sm"
                   placeholder="Search products..." />
        </div>
        <div class="col-md-4">
            <label class="form-label fw-semibold">Category</label>
            <select name="CategoryID" class="form-select border-0 shadow-sm">
                <option value="0">All Categories</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id" selected="@(Model.CategoryID == category.Id ? "selected" : null)">
                        @category.Name
                    </option>
                }
            </select>
        </div>
        <div class="col-md-4 d-flex gap-2">
            <button type="submit" class="btn flex-fill shadow-sm"
                    style="background-color:#2A7F62; color:#fff;">
                Filter
            </button>
            <a asp-controller="Home" asp-action="Index"
               class="btn btn-outline-secondary flex-fill shadow-sm">
                Reset
            </a>
        </div>
    </form>

    <!-- Products Grid -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (Model.Products.Any())
        {
            foreach (var product in Model.Products)
            {
                var imageUrl = string.IsNullOrEmpty(product.ImageUrl) ? "https://placehold.co/360x360" : product.ImageUrl;
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm rounded-3 product-card p-2">
                        <!-- Product Image -->
                        <div class="position-relative">
                            <img src="@product.ImageUrl"
                                 class="card-img-top rounded-3"
                                 alt="@product.Name"
                                 style="height: 220px; object-fit: cover; border-radius: 12px;" />
                            @if (product.StockQuantity == 0)
                            {
                                <span class="badge bg-danger position-absolute top-0 end-0 m-2">Out of Stock</span>
                            }
                        </div>

                        <!-- Card Body -->
                        <div class="card-body d-flex flex-column px-2">
                            <h5 class="card-title fw-bold text-truncate">@product.Name</h5>
                            <p class="card-text text-muted small" style="min-height:40px;">
                                @(!string.IsNullOrEmpty(product.Description) ? product.Description : "No description available.")
                            </p>

                            <div class="mt-auto">
                                <p class="fw-bold mb-3" style="color:#2A7F62; font-size:1.1rem;">
                                    @product.Price.ToString("C")
                                </p>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    if (product.StockQuantity > 0)
                                    {
                                        <div class="d-flex justify-content-between flex-wrap gap-2">
                                            <!-- Add to Cart -->
                                            <button type="button"
                                                    class="btn btn-outline-primary btn-sm flex-fill"
                                                    onclick="addToCart(@product.Id)">
                                                Add to Cart
                                            </button>

                                            <!-- Buy Now -->
                                            <a asp-controller="Cart" asp-action="Buy" asp-route-id="@product.Id"
                                               class="btn btn-outline-success btn-sm flex-fill">
                                                Buy Now
                                            </a>

                                            <!-- Details -->
                                            <a asp-controller="Home" asp-action="Details" asp-route-id="@product.Id"
                                               class="btn btn-outline-info btn-sm flex-fill">
                                                Details
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex justify-content-center">
                                            <span class="badge bg-secondary p-2">Unavailable</span>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted small">Login to purchase or save favorites.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col">
                <div class="alert alert-info border-0 shadow-sm text-center bg-light text-dark">
                    No products found.
                </div>
            </div>
        }
    </div>
</div>
