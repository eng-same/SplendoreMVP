@model ProductsDisplayModel

<div class="container mt-5">
    <!-- Hero Section -->
    <section class="p-5 mb-5 text-center rounded shadow-sm" style="background-color:#FDFBF7; border:1px solid #eee;">
        <h1 class="display-5 fw-bold" style="color:#4A4A4A;">Discover Our Products</h1>
        <p class="lead" style="color:#6c757d;">Curated items designed to bring quality and style into your everyday life.</p>
    </section>

    <!-- Search and Category Filter -->
    <form method="get" asp-action="Index" class="row g-3 mb-5">
        <div class="col-md-4">
            <input type="text" name="sterm" value="@Model.STerm"
                   class="form-control border-0 shadow-sm"
                   placeholder="Search products..." style="background-color:#FDFBF7;" />
        </div>
        <div class="col-md-4">
            <select name="CategoryID" class="form-select border-0 shadow-sm" style="background-color:#FDFBF7;">
                <option value="0">All Categories</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id" selected="@(Model.CategoryID == category.Id ? "selected" : null)">
                        @category.Name
                    </option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn w-100 shadow-sm"
                    style="background-color:#2A7F62; color:#fff;">
                Filter
            </button>
        </div>
    </form>

    <!-- Products Grid -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (Model.Products.Any())
        {
            foreach (var product in Model.Products)
            {
                var imageUrl = string.IsNullOrEmpty(product.ImageUrl) ? "/images/products/placeholder.jpg" : product.ImageUrl;
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm rounded-3" style="background-color:#FDFBF7;">
                        <img src="@imageUrl" class="card-img-top rounded-top" alt="@product.Name"
                             style="height:230px; object-fit:cover;" />

                        <div class="card-body d-flex flex-column" style="color:#4A4A4A;">
                            <h5 class="card-title fw-bold">@product.Name</h5>
                            <p class="card-text text-muted small">@product.Description</p>

                            <div class="mt-auto">
                                <p class="fw-bold mb-3" style="color:#2A7F62;">@product.Price.ToString("C")</p>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="d-flex justify-content-between flex-wrap gap-2">
                                        <!-- Add to Cart -->
                                        <a asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id"
                                           class="btn btn-sm flex-fill text-white"
                                           style="background-color:#2A7F62;">
                                            🛒 Add to Cart
                                        </a>

                                        <!-- Buy Now -->
                                        <a asp-controller="Cart" asp-action="Buy" asp-route-id="@product.Id"
                                           class="btn btn-sm flex-fill text-white"
                                           style="background-color:#4A4A4A;">
                                            💰 Buy Now
                                        </a>

                                        <!-- Add to Favorites -->
                                        <a asp-controller="Favorites" asp-action="Add" asp-route-id="@product.Id"
                                           class="btn btn-sm flex-fill border-0 shadow-sm"
                                           style="background-color:#fff; color:#d9534f;">
                                            ❤️ Favorite
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted small">Login to purchase or save favorites.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col">
                <div class="alert alert-info border-0 shadow-sm text-center" style="background-color:#FDFBF7; color:#4A4A4A;">
                    No products found.
                </div>
            </div>
        }
    </div>
</div>
