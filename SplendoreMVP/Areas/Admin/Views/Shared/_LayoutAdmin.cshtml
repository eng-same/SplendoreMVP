@* _AdminLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SplendoreMVP Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/Admin.css" asp-append-version="true" />
    </head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg admin-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="Admin" asp-action="Dashboard" asp-controller="Admin">Splendore Admin</a>
            <div class="d-flex">
                <ul>
                <partial name="_LoginStatus" />
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 col-lg-2 admin-sidebar p-3">
                <h5 class="text-white mb-4">Admin Menu</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" asp-area="Admin" asp-action="Dashboard" asp-controller="Admin">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Product">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Category">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Order">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="User">Users</a>
                    </li>
                </ul>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 col-lg-10 admin-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="admin-footer mt-auto">
        <div class="container-fluid text-center text-muted small py-3">
            &copy; 2025 <span class="fw-bold">SplendoreMVP</span> | Admin Dashboard
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

