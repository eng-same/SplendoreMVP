@model IEnumerable<UserWithRolesVM>

<h2 class="mb-4">Manage Users</h2>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Profile</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Username</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <img src="@(string.IsNullOrEmpty(user.ProfilePic) ? "https://placehold.co/36x36" : user.ProfilePic)"
                         alt="Profile"
                         class="rounded-circle"
                         width="36" height="36" />
                </td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    @if (user.Roles.Any())
                    {
                        foreach (var role in user.Roles)
                        {
                            <span class="badge bg-primary">@role</span>
                        }
                    }
                    else
                    {
                        <span class="badge bg-secondary">No Role</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary me-1">Details</a>
                    <form asp-area="Admin" asp-controller="Order" asp-action="Delete" asp-route-id="@user.Id"
                          method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Are you sure you want to delete this order?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
