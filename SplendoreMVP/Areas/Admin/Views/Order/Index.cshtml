@model IEnumerable<Order>

<div class="container mt-5">
    <h2 class="mb-4">Manage Orders</h2>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Date</th>
                <th>Status</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Customer.UserName</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <span class="badge bg-primary">@order.Status</span>
                    </td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary me-1">Details</a>
                        <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-outline-info me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-outline-danger me-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
