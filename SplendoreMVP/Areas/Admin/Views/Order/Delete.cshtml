@model Order

<div class="container mt-5">
    <h2>Delete Order</h2>
    <hr />

    <div class="alert alert-danger">
        <strong>Are you sure you want to delete this order?</strong>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <p><strong>Order ID:</strong> @Model.Id</p>
            <p><strong>Customer:</strong> @Model.Customer.UserName</p>
            <p><strong>Date:</strong> @Model.OrderDate.ToString("f")</p>
            <p><strong>Status:</strong> @Model.Status</p>
            <p><strong>Total:</strong> @Model.TotalAmount.ToString("C")</p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-outline-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
