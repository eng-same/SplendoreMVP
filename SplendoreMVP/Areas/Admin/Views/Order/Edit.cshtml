@model Order
@{
    ViewBag.Title = "Edit Order Status";
    var statuses = ViewBag.Statuses as IEnumerable<OrderStatus>;
}

<div class="container mt-5">
    <h2>Edit Order Status</h2>
    <hr />

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Order ID</label>
            <input class="form-control" value="@Model.Id" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label">Customer</label>
            <input class="form-control" value="@Model.Customer.UserName" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label">Current Status</label>
            <select class="form-select" name="status">
                @foreach (var status in statuses)
                {
                    <option value="@status" selected="@(status == Model.Status ? "selected" : null)">
                        @status
                    </option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-outline-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
